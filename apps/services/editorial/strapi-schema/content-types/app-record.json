{
  "kind": "collectionType",
  "collectionName": "app_records",
  "info": {
    "singularName": "app-record",
    "pluralName": "app-records",
    "displayName": "App Record"
  },
  "attributes": {
    "name": { "type": "string", "required": true },
    "slug": { "type": "uid", "targetField": "name", "required": true },
    "description": { "type": "text" },
    "website": { "type": "string" },
    "isPwa": { "type": "boolean", "default": false },
    "rating": { "type": "integer", "min": 0, "max": 5 },
    "estimatedNumberOfUsers": { "type": "integer" },
    "isSuspended": { "type": "boolean", "default": false },
    "logo": { "type": "media", "multiple": false, "required": false, "allowedTypes": ["images"] },
    "banner": { "type": "media", "multiple": false, "required": false, "allowedTypes": ["images"] },
    "screenshots": { "type": "media", "multiple": true, "required": false, "allowedTypes": ["images"] },
    "organizationProfile": { "type": "relation", "relation": "manyToOne", "target": "api::organization-profile.organization-profile" },
    "category": { "type": "relation", "relation": "manyToOne", "target": "api::category.category" },
    "tags": { "type": "relation", "relation": "manyToMany", "target": "api::tag.tag" },
    "socials": { "type": "relation", "relation": "oneToMany", "target": "api::social-link.social-link", "mappedBy": "appRecord" },
    "stores": { "type": "relation", "relation": "oneToMany", "target": "api::store-link.store-link", "mappedBy": "appRecord" },
    "devices": { "type": "relation", "relation": "oneToMany", "target": "api::device-association.device-association", "mappedBy": "appRecord" },
    "platforms": { "type": "relation", "relation": "oneToMany", "target": "api::platform-association.platform-association", "mappedBy": "appRecord" },
    "monetizations": { "type": "relation", "relation": "oneToMany", "target": "api::monetization-association.monetization-association", "mappedBy": "appRecord" }
  }
}

