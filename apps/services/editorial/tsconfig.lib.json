{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../../dist/apps/services/editorial",
    "composite": true,
    "declaration": true,
    "module": "CommonJS",
    "target": "ES2019",
    "lib": ["ES2020"],
    "types": ["node"],
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmitOnError": true
