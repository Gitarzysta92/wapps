  "references": [
    { "path": "../../../data/tsconfig.lib.json" },
    { "path": "../../../libs/domains/catalog/category/tsconfig.lib.json" },
    { "path": "../../../libs/domains/catalog/compatibility/tsconfig.lib.json" },
    { "path": "../../../libs/domains/catalog/metrics/tsconfig.lib.json" },
    { "path": "../../../libs/domains/catalog/pricing/tsconfig.lib.json" },
    { "path": "../../../libs/domains/catalog/references/tsconfig.lib.json" },
    { "path": "../../../libs/domains/catalog/tags/tsconfig.lib.json" }
  ]
