{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2020"],
    "target": "ES2019",
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "noImplicitThis": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": "../../../",
    "paths": {
      "@data": ["data/src/index.ts"],
      "@domains/catalog/category": ["libs/domains/catalog/category/src/index.ts"],
      "@domains/catalog/compatibility": ["libs/domains/catalog/compatibility/src/index.ts"],
      "@domains/catalog/metrics": ["libs/domains/catalog/metrics/src/index.ts"],
      "@domains/catalog/pricing": ["libs/domains/catalog/pricing/src/index.ts"],
      "@domains/catalog/references": ["libs/domains/catalog/references/src/index.ts"],
      "@domains/catalog/tags": ["libs/domains/catalog/tags/src/index.ts"]
    }
  },
  "include": [
    "./",
    "./**/*.ts",
    "./**/*.js",
    "src/**/*.json",
    "../../data/src/**/*.ts"
  ],
  "exclude": [
    "node_modules/",
    "build/",
    "dist/",
    ".cache/",
    ".tmp/",
    "src/admin/",
    "**/*.test.*",
    "src/plugins/**"
  ]
}
