{
  "name": "discussion-csr",
  "$schema": "../../../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "discussion",
  "sourceRoot": "apps/portals/discussion/entrypoints/csr/src",
  "tags": ["type:app"],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/portals/discussion/entrypoints/csr",
        "index": "apps/portals/discussion/entrypoints/csr/src/index.html",
        "main": "apps/portals/discussion/entrypoints/csr/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/portals/discussion/entrypoints/csr/tsconfig.app.json",
        "stylePreprocessorOptions": {
          "includePaths": ["libs", "libs/ui/design-system/src"]
        },
        "assets": [
          "apps/portals/discussion/entrypoints/csr/src/assets",
          {
            "glob": "**/*",
            "input": "apps/portals/discussion/entrypoints/csr/src/.well-known",
            "output": ".well-known"
          },
          {
            "glob": "**/*",
            "input": "node_modules/@taiga-ui/icons/src",
            "output": "assets/taiga-ui/icons"
          }
        ],
        "styles": [
          "apps/portals/discussion/application/src/styles.scss",
          {
            "input": "node_modules/@taiga-ui/core/styles/taiga-ui-theme.less",
            "bundleName": "taiga-theme"
          }
        ],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "1mb",
              "maximumError": "1.5mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "options": {
        "buildTarget": "discussion-csr:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "discussion-csr:build:production"
        },
        "development": {
          "buildTarget": "discussion-csr:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "discussion-csr:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/portals/discussion/entrypoints/csr/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  }
}

