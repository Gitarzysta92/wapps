{
  "name": "aggregator-ssr",
  "$schema": "../../../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/portals/aggregator/application/src",
  "tags": ["type:app"],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "dependsOn": [],
      "options": {
        "outputPath": "dist/apps/portals/aggregator/angular",
        "index": "apps/portals/aggregator/application/src/index.html",
        "main": "apps/portals/aggregator/application/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/portals/aggregator/application/tsconfig.app.json",
        "stylePreprocessorOptions": {
          "includePaths": [
            "libs",
            "libs/ui/design-system/src"
          ]
        },
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/portals/aggregator/application/src/static/assets",
            "output": "assets"
          },
          {
            "glob": "**/*",
            "input": "node_modules/@taiga-ui/icons/src",
            "output": "assets/taiga-ui/icons"
          }
        ],
        "styles": [
          "apps/portals/aggregator/application/src/styles.scss",
          {
            "input": "node_modules/@taiga-ui/core/styles/taiga-ui-theme.less",
            "bundleName": "taiga-theme"
          }
        ],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "2mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "10kb",
              "maximumError": "20kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "build-server": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/portals/aggregator/ssr",
        "main": "apps/portals/aggregator/entrypoints/ssr/src/main.ts",
        "tsConfig": "apps/portals/aggregator/entrypoints/ssr/tsconfig.app.json",
        "webpackConfig": "apps/portals/aggregator/entrypoints/ssr/webpack.config.js"
      },
      "configurations": {
        "development": {
          "optimization": false,
          "sourceMap": true
        },
        "production": {
          "optimization": true,
          "sourceMap": false
        }
      }
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "options": {
        "buildTarget": "aggregator-ssr:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "aggregator-ssr:build:production"
        },
        "development": {
          "buildTarget": "aggregator-ssr:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "aggregator-ssr:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/portals/aggregator/src/apps/angular/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  }
}
