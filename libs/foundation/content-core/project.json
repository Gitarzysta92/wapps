{
  "name": "content-core",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/foundation/content-core/src",
  "tags": [
    "type:foundation",
    "scope:content-core"
  ],
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "libs/foundation/content-core/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": [
        "{projectRoot}/../../../dist/foundation/content-core"
      ],
      "options": {
        "command": "tsc --build libs/foundation/content-core/tsconfig.lib.json"
      }
    }
  }
}
