{
  "name": "ui-status-banner",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "prefix": "ui",
  "sourceRoot": "libs/ui/status-banner/src",
  "tags": ["type:ui", "scope:status-banner"],
  "targets": {
    "build": {
      "executor": "@nx/angular:ng-packagr-lite",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/ui/status-banner/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/ui/status-banner/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/ui/status-banner/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/ui/status-banner/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    }
  }
}
